<%- include('../inc/top') %>
<h1>Trang danh sách </h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Desc</th>
        <th>Thể loại</th>

    </tr>
    <% listSP.forEach(  (row) => {  %>
        <tr>
            <td> <%= row._id %> </td>
            <td> <%= row.name %> </td>
            <td> <%= row.price %> </td>
            <td> <%= row.description %> </td>
            <td>
                <% if(typeof(row.id_theloai) != 'undefined') {  %>
                    <%= row.id_theloai.name %>
                <% } %>
            </td>
        </tr>
   <% }); %>
</table>


